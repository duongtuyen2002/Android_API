<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetail">

    <ImageView
        android:id="@+id/imageViewHinhAnhh"
        android:layout_width="120dp"
        android:layout_height="226dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/img.details"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewtitlee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@+id/imageViewHinhAnhh"
        android:text="title"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewdatee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitlee"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/imageViewHinhAnhh"
        android:text="date"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/rtb.movie"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewdatee"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewHinhAnhh"
        android:numStars="5"
        android:rating="4"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/textViewoverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewHinhAnhh"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="42dp"
        android:text="ABC"
        android:textSize="22dp" />

    <ImageButton
        android:id="@+id/img.bt.back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24" />


</RelativeLayout>